{
  "name": "express-typescript-eslint-prettier-template",
  "version": "1.0.0",
  "description": "A template for an expressJS, typescript, eslint & prettier project",
  "main": "dist/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc --build tsconfig.build.json",
    "build:all": "npm run clean && tsc --build tsconfig.json",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon ./src/index.ts",
    "lint": "eslint ./src ./test",
    "lint:fix": "eslint ./src ./test --fix",
    "prettier:check": "prettier ./src ./test --check --ignore-unknown",
    "prettier:write": "prettier ./src ./test --write --ignore-unknown",
    "prepare": "husky",
    "install-service": "node service.js install",
    "start-service": "node service.js start",
    "stop-service": "node service.js stop",
    "uninstall-service": "node service.js uninstall"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "eslint",
    "prettier"
  ],
  "author": "Jake Bisson",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv-safe": "^9.0.0",
    "express": "^5.0.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^3.2.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/dotenv-safe": "^8.1.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.7",
    "@types/morgan": "^1.9.8",
    "@types/node": "^22.0.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
